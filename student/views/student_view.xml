<odoo>
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="barcode"/>
			            <field name="email"/>
                        <field name="is_disabled"/>
			            <field name="disability_type" invisible="not is_disabled"/>
                        <field name="career_id"/>
                        <field name="period_academic"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!-- Vista de lista para el modelo de estudiantes -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree string="Student">
                <field name="name"/>
                <field name="barcode"/>
		        <field name="campus_id"/>
		        <field name="faculty_id"/>
                <field name="career_id"/>
                <field name="period_academic"/>
                <field name="email"/>
		        <field name="is_disabled"/>
            </tree>
        </field>
    </record>

<!-- AcciÃ³n para abrir las vistas de estudiantes -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the first student record
            </p>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="student_menu" name="Student Management" sequence="2"/>
    <menuitem id="menu_student" name="Students" parent="student_menu" action="action_student"/>
</odoo>
