<odoo>
    <record id="view_faculty_form" model="ir.ui.view">
        <field name="name">faculty.form</field>
        <field name="model">campus.faculty</field>
        <field name="arch" type="xml">
            <form string="Faculty">
                <sheet>
                    <group>
			<field name="code"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_faculty" model="ir.actions.act_window">
        <field name="name">Faculties</field>
        <field name="res_model">campus.faculty</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
