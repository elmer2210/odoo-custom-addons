<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción y menú para Sedes -->
    <record id="action_campus" model="ir.actions.act_window">
        <field name="name">Sedes</field>
        <field name="res_model">student_management.campus</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_campus" name="Sedes" parent="menu_student_management" action="action_campus"/>

    <!-- Vista de Lista -->
    <record id="view_campus_tree" model="ir.ui.view">
        <field name="name">campus.tree</field>
        <field name="model">student_management.campus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_campus_form" model="ir.ui.view">
        <field name="name">campus.form</field>
        <field name="model">student_management.campus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Facultades">
                            <field name="faculty_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
