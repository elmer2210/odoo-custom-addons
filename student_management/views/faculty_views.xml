<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción y menú para Facultades -->
    <record id="action_faculty" model="ir.actions.act_window">
        <field name="name">Facultades</field>
        <field name="res_model">student_management.faculty</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_faculty" name="Facultades" parent="menu_student_management" action="action_faculty"/>

    <!-- Vista de Lista -->
    <record id="view_faculty_tree" model="ir.ui.view">
        <field name="name">faculty.tree</field>
        <field name="model">student_management.faculty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="campus_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_faculty_form" model="ir.ui.view">
        <field name="name">faculty.form</field>
        <field name="model">student_management.faculty</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="campus_id"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Carreras">
                            <field name="career_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
