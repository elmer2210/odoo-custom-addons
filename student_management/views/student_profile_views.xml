<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para Perfiles de Estudiantes -->
    <record id="action_student_profile" model="ir.actions.act_window">
        <field name="name">Perfiles de Estudiantes</field>
        <field name="res_model">student_management.student_profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_student_profile" name="Perfiles de Estudiantes" parent="menu_student_management" action="action_student_profile"/>

    <!-- Vista de Lista -->
    <record id="view_student_profile_tree" model="ir.ui.view">
        <field name="name">student.profile.tree</field>
        <field name="model">student_management.student_profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="barcode"/>
                <field name="student_id"/>
                <field name="name"/>
                <field name="campus_id"/>
                <field name="faculty_id"/>
                <field name="career_id"/>
                <field name="has_disability"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario Actualizada -->
    <record id="view_student_profile_form" model="ir.ui.view">
        <field name="name">student.profile.form</field>
        <field name="model">student_management.student_profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Información Personal">
                        <field name="barcode"/>
                        <field name="student_id"/>
                        <field name="name"/>
                        <field name="email"/>
                    </group>
                    <group string="Información Académica">
                        <field name="campus_id"/>
                        <field name="faculty_id"/>
                        <field name="career_id"/>
                    </group>
                    <group string="Información Adicional">
                        <field name="has_disability"/>
                        <field name="disability_type_id"  invisible="not has_disability"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
