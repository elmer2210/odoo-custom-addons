<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- AcciÃ³n y menÃº para Carreras -->
    <record id="action_career" model="ir.actions.act_window">
        <field name="name">Carreras</field>
        <field name="res_model">student_management.career</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_career" name="Carreras" parent="menu_student_management" action="action_career"/>

    <!-- Vista de Lista -->
    <record id="view_career_tree" model="ir.ui.view">
        <field name="name">career.tree</field>
        <field name="model">student_management.career</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="faculty_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_career_form" model="ir.ui.view">
        <field name="name">career.form</field>
        <field name="model">student_management.career</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="faculty_id"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
